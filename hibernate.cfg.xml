<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
    <property name="hibernate.connection.username">project</property>
    <property name="hibernate.connection.password">project</property>
    <mapping resource="com/myapp/struts/Login.hbm.xml"/>
    <mapping resource="com/myapp/struts/Admin.hbm.xml"/>
    <mapping resource="com/myapp/struts/Subject.hbm.xml"/>
    <mapping resource="com/myapp/struts/Teacher.hbm.xml"/>
    <mapping resource="com/myapp/struts/Batch.hbm.xml"/>
    <mapping resource="com/myapp/struts/Student.hbm.xml"/>
    <mapping resource="com/myapp/struts/Studentabsent.hbm.xml"/>
    <mapping resource="com/myapp/struts/Studentattend.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
